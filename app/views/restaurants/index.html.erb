<div class="container">
  <h1>All the restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <div class="card m-2">
      <li><%= restaurant.name %></li>
      <%= link_to 'See details', restaurant_path(restaurant), class: "btn btn-primary" %>
      <%#= link_to restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure ?"} do %>
    </div>
  <% end %>
</ul>
  <p><%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-success" %></p>
</div>
